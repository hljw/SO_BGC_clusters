	keywords = {Air–sea interaction, Large-scale hydrography, Mode water, Physical oceanography, Potential vorticity, Stratification, Water mass census},
	pages = {211 -- 226},
}

@article{donohue_mean_2016,
	title = {Mean {Antarctic} {Circumpolar} {Current} transport measured in {Drake} {Passage}: {MEAN} {ACC} {TRANSPORT}},
	volume = {43},
	issn = {00948276},
