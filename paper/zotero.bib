@article{hausmann_observed_2017,
	title = {Observed mesoscale eddy signatures in {Southern} {Ocean} surface mixed-layer depth: {SOUTHERN} {OCEAN} {EDDY} {MIXED}-{LAYER} {DEPTHS}},
