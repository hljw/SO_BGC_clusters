	urldate = {2019-11-22},
	journal = {Geophysical Research Letters},
	author = {Donohue, K. A. and Tracey, K. L. and Watts, D. R. and Chidichimo, M. P. and Chereskin, T. K.},
	month = nov,
	year = {2016},
	pages = {11,760--11,767},
}

@article{close_control_2013,
	title = {Control of {Mode} and {Intermediate} {Water} {Mass} {Properties} in {Drake} {Passage} by the {Amundsen} {Sea} {Low}},
