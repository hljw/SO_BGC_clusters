	urldate = {2020-10-01},
	journal = {Journal of Geophysical Research: Oceans},
	author = {Jackson, L. C. and Dubois, C. and Forget, G. and Haines, K. and Harrison, M. and Iovino, D. and Köhl, A. and Mignac, D. and Masina, S. and Peterson, K. A. and Piecuch, C. G. and Roberts, C. D. and Robson, J. and Storto, A. and Toyoda, T. and Valdivieso, M. and Wilson, C. and Wang, Y. and Zuo, H.},
